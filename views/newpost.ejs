<!DOCTYPE html>
<html lang="en">

  <head>
    
    <!-- Meta Tag -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    
    <title>New Post</title>
    
       <!-- All CSS Plugins -->
    <link rel="stylesheet" type="text/css" href="css/plugin.css">
    
    <!-- Main CSS Stylesheet -->
    <link rel="stylesheet" type="text/css" href="css/style.css">

    
    <!-- Google Web Fonts  -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,300,500,600,700">
    
    
    <!-- HTML5 shiv and Respond.js support IE8 or Older for HTML5 elements and media queries -->
    <!--[if lt IE 9]>
	   <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	   <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    

  </head>

 <body>

	
     
	 <!-- Preloader Start -->
     <div class="preloader">
	   <div class="rounder"></div>
      </div>
      <!-- Preloader End -->
      
      
    
    
    <div id="main">
        <div class="container">
            <div class="row">
            	
               
                 
                 <!-- About Me (Left Sidebar) Start -->
                 <% if(!user.id && !user.login) {%>

                  <div class="col-md-3">
                    <div class="about-fixed">
                     
                      <div class="my-pic">
                            <div id="menu" class="collapse">
 
                          </div>
                         </div>
                       
                       
                       
                       <div class="my-detail">
                       
                         <div class="white-spacing">
                           <a href="/login"><h1>Please Sign In</h1></a>
                             <a href="/login"><span>Login</span></a>
                         </div> 
                     </div>
                   </div>
                 </div>
                 <% } else { %>
                   <div class="col-md-3">
                    <div class="about-fixed">
                     
                      <div class="my-pic">
                            <div id="menu" class="collapse">
 
                          </div>
                         </div>
                       
                       
                       
                       <div class="my-detail">
                       
                         <div class="white-spacing">
                           <a href="/"><h1>Hello <%= user.login %></h1></a>
                           <a href="/newpost"><span>Add new post</span></a><br>
                             <a href="/api/auth/logout"><span>Logout</span></a>
                         </div> 
                     </div>
                   </div>
                 </div>
                 <% } %>
                <!-- About Me (Left Sidebar) End -->
                
                
                
                
                 
                 <!-- Contact (Right Sidebar) Start -->
                 <div class="col-md-9">
                    <div class="col-md-12 page-body">
                    	<div class="row">
                    		
                            
                            <div class="sub-title">
                           		<h2>New Post</h2>
                                <a href="/"><i class="icon-home"></i></a>
                             </div>
                            
                            
                            <div class="col-md-12 content-page">
                              <div class="col-md-12 blog-post">
                            	

                                                                 
                                <!-- Intro Start -->
                                <div class="post-title margin-bottom-10">
                                   <h1>Add new post</h1>
                                   </div>

                                     <!-- Intro End -->
                                
                                <label for="post-title"><h3>Title</h3></label><br>
                                <input type="text" id="post-title" class="add-post" name="title">
                                <label for="post-body"><h3>Body</h3></label><br>
                                <textarea id="post-body" cols="100%" class="add-post-body " name="body"></textarea>

                                <button class="post-form-btn">Add post</button>
                                
                                <!-- Testimonials Start -->

                                 </div>
                                 
                                </div>
                             
                         
                         </div>
                        </div>
                       </div>
                                  
                     
                    
                     
                  </div>
                  <!-- Contact (Right Sidebar) End -->
                
            </div>
         </div>
      </div>
    
      
    
    
    
    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->
    
    
    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script type="text/javascript" src="js/plugin.js"></script>
    
    <!-- Main Javascript File  -->
    <script type="text/javascript" src="js/scripts.js"></script>
    <script type="text/javascript" src="js/post.js"></script>

    
   </body>
 </html>
